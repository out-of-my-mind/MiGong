                                    <Transform3DGroup>
                                        <TranslateTransform3D OffsetX="0" OffsetY="0" OffsetZ="0"/>
                                        <ScaleTransform3D ScaleX="{Binding ElementName=scal, Path=Value}" ScaleY="{Binding ElementName=scal, Path=Value}" ScaleZ="{Binding ElementName=scal, Path=Value}"/>
